<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idp.packpickup.SendPackActivity"
    android:background="@color/bg_login"
    android:gravity="center_vertical|center_horizontal"
    android:id = "@+id/send_pack_id">


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:layout_alignParentLeft="true"
        />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@id/datePicker"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:id="@+id/departure_city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure_city"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/datePicker"
        />

    <EditText
        android:id="@+id/departure_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/departure_city_text"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/arrival_city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival_city"
        android:layout_alignParentRight="true"
        android:layout_below="@id/timePicker"
        />

    <EditText
        android:id="@+id/arrival_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/arrival_city_text"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>